@model List<AdaptiveQuizSystem.Models.Subject>
@{
    ViewData["Title"] = "Danh sách Môn học";
}

<h2>Danh sách Môn học</h2>

<a asp-action="Create" class="btn btn-success mb-3">+ Thêm Môn học</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tên môn</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var subject in Model)
        {
            <tr>
                <td>@subject.SubjectId</td>
                <td>@subject.SubjectName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@subject.SubjectId" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@subject.SubjectId" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
