@model AdaptiveQuizSystem.Models.LoginViewModel

<h2>Đăng nhập</h2>

<form asp-action="Login" method="post">
    <div class="mb-3">
        <input asp-for="Username" placeholder="Tên đăng nhập" class="form-control" />
    </div>
    <div class="mb-3">
        <input asp-for="Password" placeholder="Mật khẩu" type="password" class="form-control" />
    </div>
    <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-success">Đăng nhập</button>
        <a asp-action="Register" asp-controller="Account" class="btn btn-outline-primary">Đăng ký</a>
    </div>
</form>
